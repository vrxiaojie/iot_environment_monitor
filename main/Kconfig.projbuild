                GPIO pin number for data bus[19].
        config LCD_DATA20_GPIO
            int "DATA20 GPIO"
            depends on LCD_DATA_LINES > 16
            help
                GPIO pin number for data bus[20].
        config LCD_DATA21_GPIO
            int "DATA21 GPIO"
            depends on LCD_DATA_LINES > 16
            help
                GPIO pin number for data bus[21].
        config LCD_DATA22_GPIO
            int "DATA22 GPIO"
            depends on LCD_DATA_LINES > 16
            help
                GPIO pin number for data bus[22].
        config LCD_DATA23_GPIO
            int "DATA23 GPIO"
            depends on LCD_DATA_LINES > 16
