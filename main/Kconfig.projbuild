    menu "LCD backlight Config"
        config LCD_BACKLIGHT_GPIO
            int "Backlight GPIO"
            default 42
            help
                GPIO pin number for LCD backlight control.

        config LCD_BACKLIGHT_FREQUENCY
            int "Backlight PWM Frequency (Hz)"
            default 2000
            help
                Set the backlight PWM frequency in Hz.
        endmenu

    menu "I2C Config"
        config I2C_MASTER_SCL
            int "SCL GPIO Num"
            range 0 48
            default 1
            help
                GPIO number for I2C Master clock line.

        config I2C_MASTER_SDA
            int "SDA GPIO Num"
            range 0 48
            default 2
            help
                GPIO number for I2C Master data line.

        config I2C_MASTER_FREQUENCY
            int "Master Frequency"
            default 400000
            help
                I2C Speed of Master device.
    endmenu

    menu "GT911 GPIO Config"
        config GT911_INT_GPIO
            int "GT911 INT GPIO"
            default  41
            help
                GPIO pin number for GT911 INT signal.

        config GT911_RST_GPIO
            int "GT911 RST GPIO"
            default 40
            help
                GPIO pin number for GT911 RST signal.
    endmenu

    menu "MQTT config"
        config MQTT_PUBLISH_TOPIC
            string "MQTT Publish Topic"
            default "/iot_env_monitor/value"
            help
                The MQTT topic to publish to.
    endmenu
endmenu
